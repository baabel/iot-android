<resources>


    <style name="MyTextAppearance.Header" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/font_size_header</item>
    </style>

    <style name="MyTextAppearance.AllCapsHeader" parent="MyTextAppearance.Header">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyTextAppearance.BoldHeader" parent="MyTextAppearance.Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.AllCapsBoldHeader" parent="MyTextAppearance.AllCapsHeader">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>

    <style name="MyTextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Notes" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_notes</item>
    </style>

    <style name="MyButton.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/font_size_header</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
